{
    "name": "webignition/php-dom-element-identifier",
    "description": "",
    "keywords": [],
    "homepage": "https://github.com/webignition/php-dom-element-identifier",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "webignition@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "webignition\\DomElementIdentifier\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\DomElementIdentifier\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "./vendor/bin/phpcs src tests --colors --standard=PSR12",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "test-coverage": "./vendor/bin/phpunit --colors=always --coverage-html=build/coverage",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "webignition/php-dom-element-locator": ">=0.4,<1"
    },
    "require-dev": {
        "phpstan/phpstan": "^0.12",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "3.*"
    },
    "config": {
        "sort-packages": true
    }
}
